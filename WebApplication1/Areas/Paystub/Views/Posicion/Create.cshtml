@model Models.ViewModel.PositionVM

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h2>Crear una nueva Posicion</h2>
        </div>
        <div class="col-2">
        </div>
    </div>
    <form asp-action="Create">
        <div class="row m-2">
            <div class="col">
                <label asp-for="Posicion.Titulo" class="col-form-label"></label>
                <input asp-for="Posicion.Titulo" class="form-control" />
                <span asp-validation-for="Posicion.Titulo"></span>
            </div>
            <div class="col">
                <label asp-for="Posicion.Proyecto_Id" class="col-form-label"></label>
                <select asp-for="Posicion.Proyecto_Id" asp-items="Model.ListaProyectos" class="form-control">
                    <option selected disabled>--Select a Category--</option>
                </select>
                <span asp-validation-for="Posicion.Proyecto_Id"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="container-fluid">
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Create</button>
                        <a class="btn btn-info" asp-action="Index" asp-controller="Posicion">Back to the Index</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}